# JRM E-commerce Platform - Environment Configuration
# Malaysian E-commerce with Membership System

# Database Configuration
DATABASE_URL="postgresql://atiffriduan@localhost:5432/jrm_ecommerce_dev?schema=public"

# NextAuth.js Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="jrm-ecommerce-nextauth-secret-change-in-production"

# Malaysian Payment Gateway (Billplz)
BILLPLZ_API_KEY=""
BILLPLZ_COLLECTION_ID=""
BILLPLZ_X_SIGNATURE_KEY=""
BILLPLZ_SANDBOX=true

# Malaysian Shipping (EasyParcel)
EASYPARCEL_API_KEY=""
EASYPARCEL_SECRET_KEY=""
EASYPARCEL_SANDBOX=true

# Email Service Configuration
EMAIL_FROM="noreply@jrmecommerce.com"
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""

# File Upload & Storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Redis Configuration (for caching and background jobs)
REDIS_URL="redis://localhost:6379"

# Malaysian Tax Configuration
GST_RATE=0.06
SST_RATE=0.06
TAX_INCLUSIVE=true

# Business Configuration
MEMBERSHIP_THRESHOLD=80.00
DEFAULT_CURRENCY="MYR"
TIMEZONE="Asia/Kuala_Lumpur"
LOCALE="en-MY"

# Application Environment
NODE_ENV="development"