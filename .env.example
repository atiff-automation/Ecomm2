# JRM E-commerce Platform - Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/jrm_ecommerce"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# SuperAdmin Security Configuration
# IP addresses allowed for SuperAdmin access (comma-separated)
# Leave empty in development to allow all IPs
SUPERADMIN_WHITELIST_IPS="127.0.0.1,::1,192.168.1.100"

# Maintenance Mode
MAINTENANCE_MODE="false"

# Email Configuration (Resend service for transactional emails)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="JRM E-commerce <noreply@jrmecommerce.com>"

# Billplz Payment Gateway (Malaysian Payment Processor)
BILLPLZ_API_KEY="your-billplz-api-key"
BILLPLZ_WEBHOOK_SECRET="your-billplz-webhook-secret"
BILLPLZ_SANDBOX="true"

# EasyParcel Shipping Integration
EASYPARCEL_API_KEY="your-easyparcel-api-key"
EASYPARCEL_API_SECRET="your-easyparcel-api-secret"
EASYPARCEL_SANDBOX="true"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="./public/uploads"

# Sentry Error Tracking (Optional)
SENTRY_DSN="your-sentry-dsn-here"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Production Security
# Set to "true" in production to enforce HTTPS
FORCE_HTTPS="false"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_API_MAX_REQUESTS="50"

# Malaysian Business Configuration
BUSINESS_REGISTRATION_NUMBER="your-business-registration-number"
GST_NUMBER="your-gst-number"
SST_NUMBER="your-sst-number"

# PDPA Compliance
DATA_RETENTION_DAYS="2555" # 7 years for Malaysian compliance
AUTO_DELETE_EXPIRED_DATA="true"

# Development Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"